<script type="module">
    // --- 1. CONFIG & STATE ---
    const state = {
        price: 95000, // Fallback Default
        fee: 20,      // Fallback Default
        mode: 'text',
        wallet: null,
        address: null
    };

    // --- 2. FAIL-SAFE DATA ENGINE ---
    async function initData() {
        // Price (CoinGecko) - Fails gracefully if rate limited
        try {
            const pRes = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd');
            if(pRes.ok) {
                const pData = await pRes.json();
                state.price = pData.bitcoin.usd;
            }
        } catch(e) { console.warn("Price API limit, using default."); }
        document.getElementById('btcPrice').innerText = `$${state.price.toLocaleString()}`;

        // Fees (Mempool.space) - Fails gracefully if CORS blocked
        try {
            const fRes = await fetch('https://mempool.space/api/v1/fees/recommended');
            if(fRes.ok) {
                const fData = await fRes.json();
                state.fee = fData.halfHourFee;
            }
        } catch(e) { console.warn("Mempool API blocked, using default."); }
        document.getElementById('feeRate').innerText = `${state.fee} sat/vB`;

        // Block Height
        try {
            const hRes = await fetch('https://mempool.space/api/blocks/tip/height');
            if(hRes.ok) {
                const height = await hRes.text();
                document.getElementById('blockHeight').innerText = parseInt(height).toLocaleString();
            }
        } catch(e) { document.getElementById('blockHeight').innerText = "842,000"; }
    }
    initData(); // Auto-start

    // --- 3. UI LOGIC (Tabs & Files) ---
    window.setTab = (mode, el) => {
        state.mode = mode;
        // Buttons
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        el.classList.add('active');
        // Inputs
        document.querySelectorAll('.input-area').forEach(a => a.style.display = 'none');
        document.getElementById(`inp-${mode}`).style.display = 'block';
        document.getElementById(`inp-${mode}`).classList.add('active');
        
        updateCost();
    };

    window.handleFile = (input) => {
        if(input.files[0]) {
            document.getElementById('fileName').innerText = `[ SELECTED: ${input.files[0].name.toUpperCase()} ]`;
            updateCost();
        }
    };

    // --- 4. COST CALCULATOR ---
    window.updateCost = () => {
        let size = 0;
        if(state.mode === 'text') size = new Blob([document.getElementById('val-text').value]).size;
        if(state.mode === 'html') size = new Blob([document.getElementById('val-html').value]).size;
        if(state.mode === 'image' && document.getElementById('val-file').files[0]) {
            size = document.getElementById('val-file').files[0].size;
        }

        // Formula: (Commit ~150) + (Reveal ~150 + Data/4)
        const vBytes = 150 + (150 + (size/4));
        const sats = Math.ceil(vBytes * state.fee);
        const usd = (sats / 100000000) * state.price;

        document.getElementById('dataSize').innerText = `${size.toLocaleString()} Bytes`;
        document.getElementById('costSats').innerText = size > 0 ? `${sats.toLocaleString()} sats` : "0 sats";
        document.getElementById('costUsd').innerText = size > 0 ? `$${usd.toFixed(2)}` : "$0.00";
        
        document.getElementById('btnInscribe').disabled = size === 0;
    };

    // --- 5. ROBUST WALLET CONNECT ---
    window.connectWallet = async () => {
        const btn = document.getElementById('btnConnect');
        btn.innerHTML = "CONNECTING...";

        // A. UniSat (Preferred)
        if(window.unisat) {
            try {
                const accts = await window.unisat.requestAccounts();
                handleConnected('UniSat', accts[0]);
                return;
            } catch(e) { console.log("User cancelled UniSat"); }
        }
        
        // B. Fallback / Alert
        alert("No Wallet Found!\n\nPlease install UniSat Wallet to proceed with real payments. You can still use 'Simulation Mode' without a wallet.");
        btn.innerHTML = "üîå CONNECT WALLET";
    };

    function handleConnected(provider, address) {
        state.wallet = provider;
        state.address = address;
        const btn = document.getElementById('btnConnect');
        btn.innerHTML = `<span style="color:var(--term-green)">‚óè</span> ${address.slice(0,4)}...${address.slice(-4)}`;
        btn.classList.add('connected');
    }

    // --- 6. INSCRIBE (Demo Guarantee) ---
    window.inscribe = () => {
        const isSim = document.getElementById('testMode').checked;
        
        // DEMO CHECK: Runs immediately regardless of wallet
        if(isSim) {
            const btn = document.getElementById('btnInscribe');
            const originalText = btn.innerText;
            btn.disabled = true;
            btn.innerText = "SIGNING...";
            btn.style.background = "#333";
            
            setTimeout(() => { btn.innerText = "BROADCASTING..."; }, 1000);
            setTimeout(() => { btn.innerText = "CONFIRMING..."; }, 2500);
            setTimeout(() => { 
                btn.innerText = "SUCCESS!";
                btn.style.background = "var(--term-green)";
                alert(`SIMULATION COMPLETE!\n\nStatus: Inscribed (Fake)\nCreator: ${document.getElementById('creator').value || 'Anon'}\nID: #PENDING`);
                
                // Reset
                setTimeout(() => {
                    btn.innerText = originalText;
                    btn.style.background = "var(--btc-orange)";
                    btn.disabled = false;
                }, 2000);
            }, 4000);
            return;
        }

        // REAL CHECK
        if(!state.wallet) {
            alert("For Real Mainnet Inscriptions, you MUST connect a wallet first.\n\nPlease connect UniSat or enable 'Simulation Mode'.");
            return;
        }
        
        alert("Mainnet backend integration required for real payments.");
    };

</script>
</body>
</html>
